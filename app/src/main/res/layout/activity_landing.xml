<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_bg"
    tools:context=".LandingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="200dp"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <GridLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="@dimen/size14dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProduct"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="@dimen/size16dp"
                    android:layout_marginLeft="@dimen/size8dp"
                    android:layout_marginRight="16dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="20dp"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/txtProduct"
                            android:text="Registration"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/size16dp"
                            android:fontFamily="@font/roboto_bold"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="@dimen/size16dp"
                    android:layout_marginLeft="@dimen/size8dp"
                    android:layout_marginRight="16dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/cardEnquiry">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_examination"/>

                        <TextView
                            android:id="@+id/txtEnquiry"
                            android:text="Enquiry"
                            android:textAlignment="center"
                            android:textSize="@dimen/size16dp"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSucess"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="@dimen/size16dp"
                    android:layout_marginLeft="@dimen/size8dp"
                    android:layout_marginRight="16dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_logo"/>

                        <TextView
                            android:id="@+id/txtSuccess"
                            android:text="Success Stories"
                            android:textAlignment="center"
                            android:textSize="@dimen/size16dp"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWeather"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="@dimen/size16dp"
                    android:layout_marginLeft="@dimen/size8dp"
                    android:layout_marginRight="16dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_logo"/>

                        <TextView
                            android:id="@+id/txtWeather"
                            android:text="Weather"
                            android:textAlignment="center"
                            android:textSize="@dimen/size16dp"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </GridLayout>




        </LinearLayout>





    </LinearLayout>
