<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayouts"

    android:orientation="vertical"
    tools:context=".LandingActivity">


    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/main_screen_bg">

        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/digidrishti_white_r"
                android:layout_width="150dp"
                android:layout_height="150dp" />


        </RelativeLayout>


        <LinearLayout

            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_reg"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="@dimen/size16dp"
                android:layout_marginBottom="@dimen/size16dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_margin="@dimen/size5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/registration_updated" />

                    <TextView

                        android:text="@string/registration"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/size16dp"
                        android:textColor="@color/blue_text"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_examin"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="@dimen/size16dp"
                android:layout_marginBottom="@dimen/size16dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/examination_up" />

                    <TextView

                        android:text="@string/exam"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/size16dp"
                        android:textColor="@color/blue_text"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/size16dp"
                android:id="@+id/card_ref"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/size16dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/refferal_updated" />

                    <TextView

                        android:text="@string/referral"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/size16dp"
                        android:textColor="@color/blue_text"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_awareness"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="@dimen/size16dp"
                android:layout_marginBottom="@dimen/size16dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/awareness_updated" />

                    <TextView
                        android:text="@string/awarness"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/size16dp"
                        android:textColor="@color/blue_text"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_scheme"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="@dimen/size16dp"
                android:layout_marginBottom="@dimen/size16dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/eye_updated" />

                    <TextView

                        android:text="@string/scheme"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/size16dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_gc"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="@dimen/size16dp"
                android:layout_marginBottom="@dimen/size16dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/general_care_updated" />

                    <TextView

                        android:text="@string/eyecare"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/size16dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_home_drawer"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:headerLayout="@layout/lay_navigation_drawer_header"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/textColor"
        app:paddingEnd="0dp"
        android:theme="@style/MyDrawerArrowToggle"
        app:paddingStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/footer_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Â© 2020 DigiDrishti" />

            <TextView

                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Developed by HVDEH \u0026 Digital India Corporation"

                />

            <TextView

                android:layout_marginBottom="15dp"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Supported by Ministry of E\u0026IT, GoI"

                />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>